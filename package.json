{
  "name": "electron-fastapi-sidecar",
  "productName": "electron-fastapi-sidecar",
  "version": "1.0.0",
  "description": "My Electron application description",
  "main": "dist-electron/main/index.js",
  "type": "module",
  "scripts": {
    "dev": "electron-vite dev",
    "dev-setup": "node scripts/setup.js",
    "build": "node scripts/build.js",
    "build:mac": "cross-env PLATFORM=mac node scripts/build.js",
    "build:win": "cross-env PLATFORM=win node scripts/build.js",
    "build:linux": "cross-env PLATFORM=linux node scripts/build.js",
    "build:vite": "electron-vite build",
    "build:electron": "electron-builder",
    "preview": "electron-vite preview",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint:py": "cd api && uv run -m ruff check .",
    "format:py": "cd api && uv run -m ruff format .",
    "clean": "node scripts/clean.js",
    "clean:hard": "node scripts/clean.js --hard"
  },
  "keywords": [],
  "author": {
    "name": "nick-vi",
    "email": "105120312+nick-vi@users.noreply.github.com"
  },
  "license": "MIT",
  "pnpm": {
    "onlyBuiltDependencies": [
      "electron"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@types/electron": "^1.6.12",
    "@types/node": "^22.14.1",
    "@typescript-eslint/eslint-plugin": "^8.30.1",
    "@typescript-eslint/parser": "^8.30.1",
    "cross-env": "^7.0.3",
    "electron": "35.2.0",
    "electron-builder": "^26.0.12",
    "electron-vite": "^3.1.0",
    "eslint": "^9.25.0",
    "eslint-config-prettier": "10.1.2",
    "eslint-define-config": "^2.1.0",
    "glob": "^11.0.1",
    "node-fetch": "^3.3.2",
    "prettier": "3.5.3",
    "prettier-plugin-organize-imports": "^4.1.0",
    "typescript": "^5.8.3",
    "vite": "^6.3.2"
  },
  "build": {
    "appId": "com.electron-fastapi-sidecar.app",
    "productName": "Electron FastAPI Sidecar",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/**/*"
    ],
    "extraResources": [
      {
        "from": "api/dist/api",
        "to": "api",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Development"
    }
  }
}
